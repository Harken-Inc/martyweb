[Unit]
Description=LearningMaking Next.js Dev Server
After=network.target

[Service]
Type=simple
User=ec2-user
WorkingDirectory=/home/ec2-user/martyweb/frontend
Environment=PATH=/home/ec2-user/.nvm/versions/node/v20.19.6/bin:/usr/bin:/bin
Environment=NODE_ENV=development
Environment=PROJECT_NAME=learningmaking
ExecStart=/home/ec2-user/.nvm/versions/node/v20.19.6/bin/npm run dev:learningmaking
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
